global:
  scrape_interval: 15s
  evaluation_interval: 15s

  scrape_timeout: 10s

alerting:
  alertmanagers:
    - static_configs:
        - targets: []

rule_files:
  - /etc/prometheus/alert_rules.yml

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets:
          - localhost:9090

  - job_name: node-exporter
    static_configs:
      - targets:
          - localhost:9100

  - job_name: flask_app
    static_configs:
      - targets:
          - localhost:8000
          - localhost:5000
          - localhost:5001
